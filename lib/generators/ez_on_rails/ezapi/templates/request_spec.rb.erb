      delete api_<%= namespace_prefix %><%= @resource_underscored %>_url(id: <%= @resource_underscored %>.id), headers: default_headers

      expect(response).to have_http_status(:unauthorized)
      expect(<%= @resource %>.count).to eql(records_count)
    end
  end
